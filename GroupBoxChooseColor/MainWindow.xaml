<Window x:Class="GroupBoxChooseColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupBoxChooseColor"
        mc:Ignorable="d"
        Title="Цвета" Height="231" Width="287" MinHeight="231" MaxHeight="231" MinWidth="287" MaxWidth="287">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Выбрать цвет" Padding="5">
            <StackPanel>
                <RadioButton Name="rBBlue" Margin="3" Checked="RBBlue_Checked">Синий</RadioButton>
                <RadioButton Name="rbYellow" Margin="3" Checked="RbYellow_Checked">Жёлтый</RadioButton>
                <RadioButton Name="rBOrange" Margin="3" Checked="RBOrange_Checked">Оранжевый</RadioButton>
            </StackPanel>
        </GroupBox>
        <Rectangle Name="rColor" Grid.Column="1"  HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="119"/>

    </Grid>
</Window>
